# case "$(hostname)" in
#     mi-mac-trabajo)
#         WORKSPACE_ROOT="$HOME/trabajo/proyectos"
#         ;;
#     mi-mac-personal)
#         WORKSPACE_ROOT="$HOME/desarrollo"
#         ;;
# esac

